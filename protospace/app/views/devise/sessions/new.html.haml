
.container
  .form-signin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %h2.form-signin-heading Please sign in
      %label.sr-only{:for => "inputEmail"} Email address
      = f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control'
      %label.sr-only{:for => "inputPassword"} Password
      = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'input form-control'
      .checkbox
        %label
          %input#user_remember_me{:name => "user[remember_me]", :type => "checkbox", :value => "1"}/
          Remember me
      = f.submit 'Sign in', class: "btn btn-lg btn-primary btn-block"
    .text-center
      %p
        Not a member?
        = link_to"sign up now", new_user_registration_path
