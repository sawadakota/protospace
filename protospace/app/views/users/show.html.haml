.container.user-page
  %header.user-nav
    .media
      .media-left
        %img.media-object{ src: current_user.avatar.url, alt: "64x64", data: { holder_rendered:"true" }, data: { src:"holder.js/64x64" }, style: "width: 64px; height: 64px;" }
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            #{ current_user.protos.count }
            %i Projects
        .proto-user
          %span.degree #{@user.member}
        .row
          .col-md-6
            %h4 Profile
            %p #{@user.profile}
          .col-md-6
            %h4 Works
            %p #{@user.works}
.container.proto-list
  .row
    - @user.protos.each do |proto|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to proto_path(proto) do
            = image_tag (proto.thumnails.main.first.image.url)
          .caption
            %h3 #{proto.title}
            .proto-meta
              .proto-date
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                %a{ href: "#", class: "btn btn-default" } iPad
              %li
                %a{ href: "#", class: "btn btn-default" } wireframe
