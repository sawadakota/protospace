.jumbotron
  .container.text-center
    = image_tag("header_logo.png", :alt => "PROTO TYPE - SHARE THE PROTOTYPE", :height => "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{ role: "presentation" }
          %a{ href: "#" } Popular PROTO
        %li{ role: "presentation" }
          %a{ href: "#" } Newest PROTO
      %button{ type: "button", class: "btn btn-default col-lg-1" } View Tags

.container.proto-list
  .row
    - @proto.each do |proto|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to image_tag(proto.thumnails.main.first.image.url)
            - if user_signed_in? && current_user.id == proto.user.id
            .dropdown.drop_manu_location
              %button.btn.btn-default.dropdown-toggle{ data: { toggle:"dropdown" }, id: "dropdownMenu", type: "button", aria: { expanded: "false" } }action
              %ul.dropdown-menu{ role: "menu" }
                %li
                  = link_to "Delete", proto, method: :delete
                %li
                  = link_to "Edit", edit_proto_path(proto.id)
        .caption
          %h3
            = proto.title
        .proto-meta
          .proto-user
            %a{ href: "#"} by #{proto.user.username}
          .proto-posted
            Apr 26
        %ul.proto-tag-list.list-inline
          %li
            %a{ href: "#", class: "btn btn-default" } iPad
          %li
            %a{ href: "#", class: "btn btn-default" } wireframe

