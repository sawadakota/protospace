.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{:href => "#"}
            %img.media-object{ alt: "64x64", data: { holder_rendered:"true" }, data: { src:"holder.js/64x64" }, src: "#{@proto.user.avatar.url}", style: "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            Top aligned media
          .proto-user
            = link_to "by #{@proto.user.username}", user_path(@proto.user.id)
            %span.degree #{ @proto.user.works }

    .col-md-6.text-right#likes
      = render partial: 'likes/like'
  .row
    .col-md-9
      = image_tag("#{main_thumnail}", class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @proto.thumnails.sub.each do |sub|
          %li.list-group-item
            = image_tag("#{sub.image.url}", class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p #{@proto.catch_copy}
    .col-md-6
      %h4 Concept
      %p #{@proto.concept}
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{:href => "#", :class => "btn btn-default"} iPad
        %li
          %a{:href => "#", :class => "btn btn-default"} wireframe

  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num#num
        = @comments.count
    .col-md-8#comment_area
      #comment_list
        = render partial: 'comments/comment', collection: @comments
      .form-inline
        = form_for @comment, remote: true do  |f|
          %h4
            Write a comment
          .row
            .form-group.col-md-10
              = f.text_area :text, placeholder: "Your comments", rows: "3", class: "form-control", id: "comment_text"
              = f.hidden_field :proto_id, value: "#{@proto.id}"
              = f.hidden_field :user_id, value: "#{current_user.id}"
            .form-group.col-md-2
              = f.submit "Comment", class: "btn btn-primary"
